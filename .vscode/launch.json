{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Flask: Run (Integrated Terminal)",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {
                "FLASK_APP": "app:app",
                "FLASK_ENV": "development",
                "FLASK_RUN_PORT": "5000"
            },
            "args": [
                "run",
                "--no-debugger",
                "--reload"
            ]
        },
        {
            "name": "Flask: Debug (No Reload)",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {
                "FLASK_APP": "app:app",
                "FLASK_ENV": "development",
                "FLASK_RUN_PORT": "5000"
            },
            "args": [
                "run",
                "--no-reload"
            ]
        }
    ]
}